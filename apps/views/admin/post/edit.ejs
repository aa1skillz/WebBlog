<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    
    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>

    
</head>
<body>
    <div class="container">
            <nav class="navbar navbar-default">
                    <div class="container-fluid">
                      <div class="navbar-header">
                        <a class="navbar-brand" href="/admin">Blog Admin</a>
                      </div>
                      <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Post</a></li>
                        <li><a href="#">User</a></li>
                        
                      </ul>
                    </div>
                  </nav>
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Post
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                            <% if(data && data.error){ %>
                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                        <%= data.error %>
                                </div>
                                
                            <%}%>
                        <form role="form" method="" action="">
                            <input type="hidden" class="id" name="id" value="<%if(data && data.post){%><%=data.post.id%><%}%>">
                            <div class="form-group">
                                <label>Title</label>
                                <input value="<%if(data && data.post){%><%=data.post.tittle%><%}%>"
                                 class="form-control tittle" name="tittle" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <textarea class="form-control" name="content" placeholder="Content">
                                        <%if(data && data.post){%><%=data.post.content%><%}%>
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label>Author</label>
                                <input value="<%if(data && data.post){%><%=data.post.author%><%}%>"
                                class="form-control author" name="author" placeholder="Author">
                            </div>
                            <input type="button" name="" value="Edit" class="btn btn-success post_edit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/static/js/post.js"></script>
</body>
</html>